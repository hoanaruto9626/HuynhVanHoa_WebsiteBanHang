@model WebsiteBanHang.Models.OrderViewModel

@{
    ViewBag.Title = "Order Details";
}

<div class="content-wrapper">
    <section class="section-content padding-y">
        <div class="container">
            <div class="row">
                <!-- Order Info Section -->
                <div class="col-lg-8">
                    <div class="order-info bg-white p-4 rounded shadow-sm">
                        <h2 class="text-center mb-4">Order ID: @Model.OrderId</h2>
                        <div class="order-details mb-3">
                            <h4 class="font-weight-bold">Thông tin khách hàng</h4>
                            <p><strong>Name Order:</strong> @Model.OrderName</p>
                            <p><strong>Name:</strong> @Model.CustomerName</p>
                            <p><strong>Email:</strong> @Model.CustomerEmail</p>
                            <p><strong>Phone:</strong> @Model.CustomerPhone</p>
                            <p><strong>Address:</strong> @Model.CustomerAddress</p>
                            <p><strong>Total Amount:</strong> @String.Format("{0:N0}", Model.TotalAmount) ₫</p>
                            <p><strong>Created Date:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                            <p><strong>Status:</strong> <span class="badge @Model.StatusClass">@Model.Status</span></p>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Order Items Section -->
            <div class="col-lg-12 mt-4">
                <div class="order-items bg-white p-4 rounded shadow-sm">
                    <h4 class="font-weight-bold text-center">Order Items</h4>
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Tên ảnh</th>
                                <th>Số lượng</th>
                                <th>Giá</th>
                                <th>Tổng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var orderItem in Model.OrderItems)
                            {
                                <tr>
                                    <td>@orderItem.ProductName</td>
                                    <td><img src="@Url.Content("~/Content/images/product/" + orderItem.ProductImage)" alt="@orderItem.ProductName" width="100" height="100" class="img-fluid" /></td>
                                    <td>@orderItem.Quantity</td>
                                    <td>@String.Format("{0:N0}", @orderItem.Price) ₫</td>
                                    <td>@String.Format("{0:N0}", @orderItem.SubTotal) ₫</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Back Button Section -->
            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Order")" class="btn btn-primary btn-lg">Quay lại</a>
            </div>
        </div>
    </section>
</div>

<!-- Optional: Add Custom CSS for better styling -->
<style>
    .order-info {
        border: 1px solid #ddd;
        background-color: #f9f9f9;
    }

    .order-items {
        border: 1px solid #ddd;
        background-color: #f9f9f9;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .section-content {
        padding: 30px 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    .badge-warning {
        background-color: #ffc107;
    }

    .badge-info {
        background-color: #17a2b8;
    }

    .badge-success {
        background-color: #28a745;
    }

    .badge-danger {
        background-color: #dc3545;
    }
</style>
