@model WebsiteBanHang.Models.OrderViewModel

@{
    ViewBag.Title = "Delete Order";
}

<div class="content-wrapper">
    <section class="section-content padding-y">
        <div class="container">
            <!-- Card container for order details -->
            <div class="card">
                <div class="card-header">
                    <h4>Chi tiết đơn hàng</h4>
                </div>
                <div class="card-body">
                    <!-- Display order details in a row format -->
                    <dl class="row">
                        <dt class="col-sm-4">
                            Tên đơn hàng:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.OrderName)
                        </dd>

                        <dt class="col-sm-4">
                            Tổng giá:
                        </dt>
                        <dd class="col-sm-8">
                            @String.Format("{0:#,0}", Model.TotalAmount) ₫
                        </dd>

                        <dt class="col-sm-4">
                            Trạng thái:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Status)
                        </dd>

                        <dt class="col-sm-4">
                            Địa chỉ giao hàng:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CustomerAddress)
                        </dd>

                        <dt class="col-sm-4">
                            Tên khách hàng:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CustomerName)
                        </dd>

                        <dt class="col-sm-4">
                            Email:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CustomerEmail)
                        </dd>

                        <dt class="col-sm-4">
                            Số điện thoại:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CustomerPhone)
                        </dd>

                        <dt class="col-sm-4">
                            Ngày đặt:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CreatedDate)
                        </dd>

                        <div class="col-lg-12 mt-4">
                            <div class="order-items bg-white p-4 rounded shadow-sm">
                                <h4 class="font-weight-bold text-center">Đơn hàng</h4>
                                <table class="table table-striped table-bordered">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Tên sản phẩm</th>
                                            <th>Tên ảnh</th>
                                            <th>Số lượng</th>
                                            <th>Giá</th>
                                            <th>Tổng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var orderItem in Model.OrderItems)
                                        {
                                            <tr>
                                                <td>@orderItem.ProductName</td>
                                                <td><img src="@Url.Content("~/Content/images/product/" + orderItem.ProductImage)" alt="@orderItem.ProductName" width="100" height="100" class="img-fluid" /></td>
                                                <td>@orderItem.Quantity</td>
                                                <td>@String.Format("{0:N0}", @orderItem.Price) ₫</td>
                                                <td>@String.Format("{0:N0}", @orderItem.SubTotal) ₫</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </dl>

                    <!-- Form for confirming delete action -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions text-right">
                            <input type="submit" value="Xóa đơn hàng" class="btn btn-danger" />
                            @Html.ActionLink("Quay lại danh sách", "Index", new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
