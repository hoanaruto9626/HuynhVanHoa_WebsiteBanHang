@model WebsiteBanHang.Connect.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-md-6">
                    <h1>Chi tiết sản phẩm</h1>
                </div>
                <div class="col-md-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">E-commerce</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- Product Images -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body text-center">
                            <img src="@Url.Content("~/Content/images/product/" + Model.Images)" 
                                 alt="@Model.Name" width="100" height="100" class="img-fluid rounded" />
                            <div class="d-flex justify-content-center">
                                <div class="product-image-thumb mx-1"><img src="../../dist/img/prod-1.jpg" class="img-thumbnail" alt="Product Thumb"></div>
                                <div class="product-image-thumb mx-1"><img src="../../dist/img/prod-2.jpg" class="img-thumbnail" alt="Product Thumb"></div>
                                <div class="product-image-thumb mx-1"><img src="../../dist/img/prod-3.jpg" class="img-thumbnail" alt="Product Thumb"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Details -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3>@Html.DisplayFor(model => model.Name)</h3>
                        </div>
                        <div class="card-body">
                            <p><strong>Mô tả:</strong>@Html.Raw(Model.Description)</p>
                            <p><strong>Chi tiết:</strong>@Html.Raw(Model.Details)</p>
                            <p><strong>Giá:</strong> @String.Format("{0:N0}", Model.Price) ₫</p>
                            <p><strong>Thương hiệu:</strong> @Html.DisplayFor(model => model.Brand.Name)</p>
                            <p><strong>Danh mục:</strong> @Html.DisplayFor(model => model.Category.Name)</p>
                            <p>
                                <strong>Loại sản phẩm:</strong> 
                                @if (Model.TypeId == 1)
                                {
                                    @:Giảm giá sốc
                                }
                                else
                                {
                                    @:Đề xuất
                                }
                            </p>
                        </div>
                        <div class="card-footer text-right">
                            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
