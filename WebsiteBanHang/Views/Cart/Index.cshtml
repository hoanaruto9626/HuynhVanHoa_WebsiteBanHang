@model IEnumerable<WebsiteBanHang.Models.CartModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(function () {
    function calculateCartTotals() {
        let totalPrice = 0;

        $(".price-wrap").each(function () {
            let price = parseFloat($(this).find(".price").text().replace(/[^0-9.-]+/g, ""));
            let quantity = parseInt($(this).closest("tr").find(".product-quantity").val()) || 1;

            totalPrice += price * quantity;
        });

        let discount = 0;
        let finalTotal = totalPrice - discount;

        $("#totalPrice").text(totalPrice.toLocaleString() + "đ");
        $("#finalTotal").html("<strong>" + finalTotal.toLocaleString() + " đ</strong>");
    }

    // Tính toán khi trang được tải
    calculateCartTotals();

    // Nếu số lượng thay đổi, tính toán lại
    $(".product-quantity").on("change", function () {
        let quantity = parseInt($(this).val());
        if (isNaN(quantity) || quantity < 1) {
            $(this).val(1);
        }
        calculateCartTotals();
        var productId = $(this).data("id");

        // Gửi yêu cầu cập nhật số lượng mới lên server
        updateProductQuantity(productId, quantity);
    });

    // Xử lý sự kiện nhấn nút xóa sản phẩm
    $(".removecart").click(function (e) {
        e.preventDefault();
        var productId = $(this).data("id");

        $.ajax({
            type: "POST",
            url: '@Url.Action("Remove", "Cart")',
            data: JSON.stringify({ Id: productId }),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function () {
                $(`tr[data-id="${productId}"]`).remove();
                calculateCartTotals();
            },
            error: function () {
                alert("Lỗi trong khi xóa sản phẩm khỏi giỏ hàng!");
            }
        });
    });

    // Tăng số lượng sản phẩm
    $(".input-group-append #button-plus").click(function () {
        var productId = $(this).data("id");
        var inputField = $("#ipQuantity-" + productId);
        var currentQuantity = parseInt(inputField.val());
        if (!isNaN(currentQuantity)) {
            inputField.val(currentQuantity + 1);
            calculateCartTotals();

            // Cập nhật số lượng sản phẩm lên server
            updateProductQuantity(productId, currentQuantity + 1);
        }
    });

    // Giảm số lượng sản phẩm
    $(".input-group-prepend #button-minus").click(function () {
        var productId = $(this).data("id");
        var inputField = $("#ipQuantity-" + productId);
        var currentQuantity = parseInt(inputField.val());
        if (!isNaN(currentQuantity) && currentQuantity > 1) {
            inputField.val(currentQuantity - 1);
            calculateCartTotals();

            // Cập nhật số lượng sản phẩm lên server
            updateProductQuantity(productId, currentQuantity - 1);
        }
    });

    // Hàm cập nhật số lượng sản phẩm lên server
    function updateProductQuantity(productId, quantity) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("UpdateQuantity", "Cart")',
            data: JSON.stringify({ productId: productId, quantity: quantity }),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (response) {
                // Xử lý sau khi cập nhật thành công nếu cần
            },
            error: function () {
                alert("Lỗi trong quá trình cập nhật số lượng sản phẩm!");
            }
        });
        }
    });
</script>

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">
        <div class="row">
            <main class="col-md-9">
                <div class="card">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-borderless table-shopping-cart">
                            <thead class="text-muted">
                                <tr class="small text-uppercase">
                                    <th scope="col">Product</th>
                                    <th scope="col" width="120">Quantity</th>
                                    <th scope="col" width="120">Price</th>
                                    <th scope="col" class="text-right" width="200"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr data-id="@item.product.Id">
                                        <td>
                                            <figure class="itemside">
                                                <div class="aside">
                                                    <img src="~/Content/images/product/@item.product.Images" class="img-sm" />
                                                </div>
                                                <figcaption class="info">
                                                    <a href="#" class="title text-dark">@item.product.Name</a>
                                                    <p class="text-muted small">
                                                        Size: @item.stocks?.Size, Color: @item.stocks?.Color, <br />
                                                        Brand: @item.brands.Name
                                                    </p>
                                                </figcaption>
                                            </figure>
                                        </td>
                                        <td>
                                            <div class="form-group col-md flex-grow-0">
                                                <div class="input-group mb-3 input-spinner">
                                                    <div class="input-group-prepend">
                                                        <button class="btn btn-light"
                                                                type="button"
                                                                id="button-minus"
                                                                data-id="@item.product.Id">
                                                            &minus;
                                                        </button>
                                                    </div>
                                                    <input type="text" id="ipQuantity-@item.product.Id" value="@item.Quantity" class="form-control product-quantity">
                                                    <div class="input-group-append">
                                                        <button class="btn btn-light"
                                                                type="button"
                                                                id="button-plus"
                                                                data-id="@item.product.Id">
                                                            +
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="price-wrap">
                                                <var class="price">@string.Format("{0:#,0}", item.product.Price)</var>
                                            </div>
                                            <!-- price-wrap .// -->
                                        </td>
                                        <td class="text-right">
                                            <input type="hidden" value="@item.product.Id" id="product-id" />
                                            <a data-original-title="Save to Wishlist"
                                               title=""
                                               href=""
                                               class="btn btn-light"
                                               data-toggle="tooltip">
                                                <i class="fa fa-heart"></i>
                                            </a>
                                            <a href="#" class="btn btn-light removecart" data-id="@item.product.Id"> Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <!-- Nút Thanh toán và Tiếp tục mua sắm -->
                        <div class="card-body border-top">
                            <a href="@Url.Action("Index", "ShoppingCart")" class="btn btn-secondary float-md-right">
                                Thanh toán <i class="fa fa-chevron-right"></i>
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-light">
                                <i class="fa fa-chevron-left"></i> Tiếp tục mua sắm
                            </a>
                        </div>
                        @*<div class="card-body">
                            <a href="@Url.Action("Index", "ShoppingCart")" class="btn btn-secondary float-md-right">
                                Thanh toán với paypal <i class="fa fa-chevron-right"></i>
                            </a>
                        </div>*@
                    }
                    else
                    {
                        <!-- Hiển thị thông báo giỏ hàng trống và chỉ có nút Tiếp tục mua sắm -->
                        <div class="alert alert-info" role="alert">
                            Không có sản phẩm trong giỏ hàng.
                        </div>
                        <div class="card-body border-top">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-light">
                                <i class="fa fa-chevron-left"></i> Tiếp tục mua sắm
                            </a>
                        </div>
                    }
                </div>
                <!-- card.// -->

                <div class="alert alert-success mt-3">
                    <p class="icontext">
                        <i class="icon text-success fa fa-truck"></i> Free Delivery
                        within 1-2 weeks
                    </p>
                </div>
            </main>
            <!-- col.// -->
            <aside class="col-md-3">
                <div class="card mb-3">
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label>Có mã giảm giá?</label>
                                <div class="input-group">
                                    <input type="text"
                                           class="form-control"
                                           name=""
                                           placeholder="Nhập mã giảm giá" />
                                    <span class="input-group-append">
                                        <button class="btn btn-primary">Áp dụng</button>
                                    </span>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- card-body.// -->
                </div>
                <!-- card .// -->
                <div class="card">
                    <div class="card-body">
                        <dl class="dlist-align">
                            <dt>Tổng giá:</dt>
                            <dd class="text-right" id="totalPrice">0 đ</dd>
                        </dl>
                        <dl class="dlist-align">
                            <dt>Giảm giá:</dt>
                            <dd class="text-right" id="discountPrice">0 đ</dd>
                        </dl>
                        <dl class="dlist-align">
                            <dt>Tổng cộng:</dt>
                            <dd class="text-right h5" id="finalTotal"><strong>0 đ</strong></dd>
                        </dl>
                        <hr />
                        <p class="text-center mb-3">
                            <img src="~/Content/images/misc/payments.png" height="26" />
                        </p>
                    </div>
                    <!-- card-body.// -->
                </div>
                <!-- card .// -->
            </aside>
            <!-- col.// -->
        </div>
    </div>
    <!-- container .//  -->
</section>
